<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="118dp"
        android:background="@drawable/main_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="50dp">

            <TextView
                style="@style/H_32_Semi_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="44dp"
                android:text="@string/my_vehicle"
                android:textColor="@color/title_color" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="44dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/box_background">

                <TextView
                    android:id="@+id/top_title"
                    style="@style/H_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="27dp"
                    android:layout_marginTop="22dp"
                    android:text="@string/audi_e_tron_sportback"
                    android:textColor="@color/text_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/battery_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="26dp"
                    android:src="@drawable/ic_battery"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/top_title" />

                <TextView
                    style="@style/H_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="4dp"
                    android:text="262"
                    android:textColor="@color/text_color"
                    app:layout_constraintBottom_toTopOf="@id/textView"
                    app:layout_constraintStart_toEndOf="@+id/battery_view" />

                <TextView
                    android:id="@+id/textView"
                    style="@style/H_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="8dp"
                    android:text="@string/kilometre_left"
                    android:textColor="@color/description_color"
                    app:layout_constraintBottom_toBottomOf="@id/battery_view"
                    app:layout_constraintStart_toEndOf="@id/battery_view"
                    app:layout_constraintTop_toBottomOf="@id/battery_view" />

                <ImageView
                    android:id="@+id/speed_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="53dp"
                    android:src="@drawable/ic_speed"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/battery_view" />

                <TextView
                    style="@style/H_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="4dp"
                    android:text="35%"
                    android:textColor="@color/text_color"
                    app:layout_constraintBottom_toTopOf="@id/textView1"
                    app:layout_constraintStart_toEndOf="@+id/speed_view" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/H_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:paddingBottom="8dp"
                    android:text="@string/charged"
                    android:textColor="@color/description_color"
                    app:layout_constraintBottom_toBottomOf="@id/speed_view"
                    app:layout_constraintStart_toEndOf="@id/speed_view"
                    app:layout_constraintTop_toBottomOf="@id/speed_view" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_audi"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                style="@style/H_32_Semi_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="44dp"
                android:layout_marginTop="41dp"
                android:text="@string/nearby_chargers"
                android:textColor="@color/title_color" />

            <TextView
                style="@style/H_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="44dp"
                android:layout_marginTop="8dp"
                android:text="@string/netherlands_amsterdam"
                android:textColor="@color/description_color"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/box_background">

                <ImageView
                    android:id="@+id/charger_1_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_charger1"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="19dp"
                    android:layout_marginStart="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    style="@style/H_20"
                    android:id="@+id/charger_1_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/charger_1_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="26dp"
                    android:text="@string/charge_point_station1"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/charger_1_address"
                    style="@style/H_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/charger_1_image"
                    app:layout_constraintTop_toBottomOf="@id/charger_1_title"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="32dp"
                    android:text="@string/street_pulo25"
                    android:textColor="@color/description_color"
                    />

                <TextView
                    android:id="@+id/charger_1_city"
                    style="@style/H_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/charger_1_image"
                    app:layout_constraintTop_toBottomOf="@id/charger_1_address"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="32dp"
                    android:text="@string/amsterdam_netherlands"
                    android:textColor="@color/description_color"/>

                <TextView
                    style="@style/H_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/charger_1_image"
                    app:layout_constraintTop_toBottomOf="@id/charger_1_city"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="21dp"
                    android:text="@string/ports_available8"
                    android:textColor="@color/ports_color"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="31dp"
                android:background="@drawable/box_background">

                <ImageView
                    android:id="@+id/charger_2_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_charger2"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="19dp"
                    android:layout_marginStart="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    style="@style/H_20"
                    android:id="@+id/charger_2_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/charger_2_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="26dp"
                    android:text="@string/charge_point_station2"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/charger_2_address"
                    style="@style/H_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/charger_2_image"
                    app:layout_constraintTop_toBottomOf="@id/charger_2_title"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="32dp"
                    android:text="@string/street_srna_74"
                    android:textColor="@color/description_color"
                    />

                <TextView
                    android:id="@+id/charger_2_city"
                    style="@style/H_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/charger_2_image"
                    app:layout_constraintTop_toBottomOf="@id/charger_2_address"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="32dp"
                    android:text="@string/amsterdam_netherlands"
                    android:textColor="@color/description_color"/>

                <TextView
                    style="@style/H_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/charger_2_image"
                    app:layout_constraintTop_toBottomOf="@id/charger_2_city"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="21dp"
                    android:text="@string/ports_available2"
                    android:textColor="@color/less_ports_color"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="31dp"
                android:background="@drawable/box_background">

                <ImageView
                    android:id="@+id/charger_3_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_charger3"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="19dp"
                    android:layout_marginStart="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    style="@style/H_20"
                    android:id="@+id/charger_3_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/charger_3_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="26dp"
                    android:text="@string/charge_point_station3"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/charger_3_address"
                    style="@style/H_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/charger_3_image"
                    app:layout_constraintTop_toBottomOf="@id/charger_3_title"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="32dp"
                    android:text="@string/street_adas_123_123"
                    android:textColor="@color/description_color"
                    />

                <TextView
                    android:id="@+id/charger_3_city"
                    style="@style/H_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/charger_3_image"
                    app:layout_constraintTop_toBottomOf="@id/charger_3_address"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="32dp"
                    android:text="@string/amsterdam_netherlands"
                    android:textColor="@color/description_color"/>

                <TextView
                    style="@style/H_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/charger_3_image"
                    app:layout_constraintTop_toBottomOf="@id/charger_3_city"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="21dp"
                    android:text="@string/ports_available5"
                    android:textColor="@color/ports_color"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>













